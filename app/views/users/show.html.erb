<h2>User info</h2>

<!-- ユーザーの詳細 -->
  <!--User プロフィール画像-->
  <% if @user.profile_image.attached? %>
    <%= image_tag @user.profile_image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th> <!--ユーザの自己紹介文が入るようにしろ --></th>
      </tr>
    </tbody>
  </table>

  <!-- ユーザ編集ボタン -->
<%= link_to "Edit", edit_user_path(@user.id) %>

<!-- 本追加 -->
<h2>New book</h2>

<!-- フォーム -->
<div class="create_book">
  <%= form_with model: @new_book, url: '/books', method: :post do |f| %>

    <!-- タイトル -->
    <div class="field">
      <label for="book_title">Title</label><br>
      <%= f.text_field :title %>
    </div>

    <!-- 感想 -->
    <div class="field">
      <label for="book_body">Body</label><br>
      <%= f.text_area :body %>
    </div>

  <%= f.submit 'Create Book' %>
  <% end %>
</div>

<h1>Books</h1>

<!-- テーブル -->
  <table>
    <tr>
      <th> </th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <% @books.each do |book| %>
      <tr>
        <td>
        <!--userのプロフィール画像にする-->
          <!--User プロフィール画像-->
          <% if @user.profile_image.attached? %>
            <%= image_tag @user.profile_image, size: "200x200" %>
          <% else %>
            <%= image_tag 'no_image', size: "200x200" %>
          <% end %>
        </td>

        <!--titleを本の詳細画面にする -->
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </table>