<h2>New book</h2>


<!-- フォーム -->
<div class="create_book">
  <%= form_with model: @new_book, url: '/books', method: :post do |f| %>

    <!-- タイトル -->
    <div class="field">
      <label for="book_title">Title</label><br>
      <%= f.text_field :title %>
    </div>

    <!-- 感想 -->
    <div class="field">
      <label for="book_body">Body</label><br>
      <%= f.text_area :body %>
    </div>

  <%= f.submit 'Create Book' %>
  <% end %>
</div>

<h1>Books</h1>

<!-- テーブル -->
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy",book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
      </tr>
    <% end %>
  </table>