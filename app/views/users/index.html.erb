<div>
  <%= flash[:danger] %>
</div>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render partial: 'templates/template', locals: { book: @book , user: @currentUser} %>
    </div>
    <div class="col-md-8 offset-md-1">
      <!-- Usersテーブル -->
      <h2>Users</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>image</th>
            <th>name</th>
          </tr>
        </thead>
        <tbody>
          <!--Userを取り出す-->
          <% @users.each do |user| %>
            <tr>
              <td>
              <% if user.profile_image.attached? %>
                <%= image_tag user.profile_image, size: "80x80" %>
              <% else %>
                <%= image_tag 'no_image', size: "80x80" %>
              <% end %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>