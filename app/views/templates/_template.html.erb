<!--UserInfoのテンプレ -->
<h2>User Info</h2>
<%= image_tag user.get_profile_image(100, 100) %>
<table>
  <tbody>
    <tr>
      <td>Name</td>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <td>Introduction</td>
      <td><%= user.introduction %></td>
    </tr>
  </tbody>
</table>
<br>
<!-- user編集ボタン -->
<%= link_to "Edit", edit_user_path(current_user.id) %>

<!-- createBookのテンプレ -->
<h2>New book</h2>
<%= form_with model: book, url: books_path, method: :post do |f| %>
  <label>Title</label>
  <%= f.text_field :title %>
  <br>
  <label>Opinion</label>
  <%= f.text_area :body %>
  <br>
  <%= f.submit "Create Book" %>
<% end %>