<h2>Editing Book</h2>

<%= form_with model: @book, method: :patch do |f| %>

  <label>Title</label>
  <br>
  <%= f.text_field :title %>
  <br>
  <label>Opinion</label>
  <br>
  <%= f.text_area :body %>
  <br>

  <%= f.submit 'Update Book' %>
  <br>
  <%= link_to "Show", book_path(@book.id) %>
|
  <%= link_to "Back", books_path %>
<% end %>